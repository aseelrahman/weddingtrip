<!-- Splash Screen -->
<div id="splash-screen">
  <div class="logo-container">
    <img src="<%= asset_path('logo.png') %>" alt="Wedding Trip" class="logo">
  </div>
</div>

<!-- Hero Section with Slider -->
<section id="home" class="hero-slider">
    <!-- Slides -->
    <div class="slide active" 
         data-desktop-bg="<%= asset_path('background_img/img_bg_01.jpg') %>"
         data-mobile-bg="<%= asset_path('background_img/img_bg_01m.jpg') %>">
        <div class="overlay"></div>
    </div>
    <div class="slide"
         data-desktop-bg="<%= asset_path('background_img/img_bg_02.JPG') %>"
         data-mobile-bg="<%= asset_path('background_img/img_bg_02m.JPEG') %>">
        <div class="overlay"></div>
    </div>
    <div class="slide"
         data-desktop-bg="<%= asset_path('background_img/img_bg_03.JPG') %>"
         data-mobile-bg="<%= asset_path('background_img/img_bg_03m.jpg') %>">
        <div class="overlay"></div>
    </div>
    <div class="slide"
         data-desktop-bg="<%= asset_path('background_img/img_bg_04.JPG') %>"
         data-mobile-bg="<%= asset_path('background_img/img_bg_04m.jpg') %>">
        <div class="overlay"></div>
    </div>
    <div class="slide"
         data-desktop-bg="<%= asset_path('background_img/img_bg_05.JPG') %>"
         data-mobile-bg="<%= asset_path('background_img/img_bg_05m.jpg') %>">
        <div class="overlay"></div>
    </div>

    <!-- Hero Content -->
    <div class="hero-content">
        <h1>Capturing Your <span class="changing-word">Perfect</span><br>Day</h1>
        <p>Professional wedding photography and videography to preserve your precious moments forever</p>
        <div class="btn-container">
            <a href="#" class="btn btn-primary-custom btn-cta">Book an Event</a>
            <a href="#packages" class="btn btn-outline-light btn-cta">View Packages</a>
        </div>
    </div>
</section>

<!-- Packages Section -->
<section id="packages" class="packages">
    <div class="container">
        <div class="section-title">
            <h2>Our Packages</h2>
            <p>Tailored to capture every moment of your special day</p>
        </div>

        <div class="row">
            <!-- Package 1 -->
            <div class="col-lg-3 col-md-6">
                <div class="card">
                    <img src="/api/placeholder/400/300" class="card-img-top" alt="Essential Package">
                    <div class="card-body">
                        <h5 class="card-title">Essential Package</h5>
                        <p class="price">$1,499</p>
                        <p class="card-text">Perfect for intimate weddings with 6 hours of coverage, 300+ edited photos, and online gallery.</p>
                        <a href="#" class="btn btn-primary-custom w-100">View Details</a>
                    </div>
                </div>
            </div>

            <!-- Package 2 -->
            <div class="col-lg-3 col-md-6">
                <div class="card">
                    <img src="/api/placeholder/400/300" class="card-img-top" alt="Classic Package">
                    <div class="card-body">
                        <h5 class="card-title">Classic Package</h5>
                        <p class="price">$2,499</p>
                        <p class="card-text">8 hours of coverage, 500+ edited photos, engagement session, and premium album.</p>
                        <a href="#" class="btn btn-primary-custom w-100">View Details</a>
                    </div>
                </div>
            </div>

            <!-- Package 3 -->
            <div class="col-lg-3 col-md-6">
                <div class="card">
                    <img src="/api/placeholder/400/300" class="card-img-top" alt="Premium Package">
                    <div class="card-body">
                        <h5 class="card-title">Premium Package</h5>
                        <p class="price">$3,499</p>
                        <p class="card-text">Full day coverage, 700+ photos, highlight video, second photographer, and engagement session.</p>
                        <a href="#" class="btn btn-primary-custom w-100">View Details</a>
                    </div>
                </div>
            </div>

            <!-- Package 4 -->
            <div class="col-lg-3 col-md-6">
                <div class="card">
                    <img src="/api/placeholder/400/300" class="card-img-top" alt="Luxury Package">
                    <div class="card-body">
                        <h5 class="card-title">Luxury Package</h5>
                        <p class="price">$4,999</p>
                        <p class="card-text">Complete 2-day coverage, 1000+ photos, cinematic film, drone shots, and luxury album.</p>
                        <a href="#" class="btn btn-primary-custom w-100">View Details</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>